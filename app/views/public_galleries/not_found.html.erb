<% content_for :title, "Gallery Not Found" %>

<div class="status-page">
  <div class="status-content">
    <div class="status-icon">
      <i class="fas fa-search" aria-hidden="true"></i>
    </div>
    
    <h1 class="status-title">Gallery Not Found</h1>
    <p class="status-message">
      The gallery you're looking for doesn't exist or may have been removed.
      Please check the URL and try again, or contact the photographer for assistance.
    </p>
    
    <%= link_to "Go Back", "javascript:history.back()", class: "status-action" %>
  </div>
</div>

<!-- Minimal styling for error page -->
<style>
  .navbar { display: none; }
  .footer { display: none; }
  body { margin: 0; padding: 0; }
</style>